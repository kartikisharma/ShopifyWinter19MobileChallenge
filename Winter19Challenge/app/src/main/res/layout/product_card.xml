<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium_margin_14dp"
    tools:ignore="contentDescription">

    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin_14dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/product_card_title_size"
        app:layout_constraintBottom_toTopOf="@id/product_description"
        app:layout_constraintStart_toEndOf="@+id/product_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Product Title" />

    <TextView
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin_8dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/product_title"
        app:layout_constraintTop_toBottomOf="@id/product_title"
        tools:text="Description!!!!" />

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/product_card_image_size"
        android:layout_height="@dimen/product_card_image_size"
        android:src="@color/colorAccent"
        android:maxHeight="@dimen/product_card_image_size"
        android:maxWidth="@dimen/product_card_image_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>