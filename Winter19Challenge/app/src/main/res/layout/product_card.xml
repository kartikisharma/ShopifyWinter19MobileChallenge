<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium_margin"
    android:orientation="vertical"
    tools:ignore="contentDescription">

    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_toEndOf="@id/product_image"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/product_card_title_size"
        tools:text="Product Title" />

    <TextView
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/product_title"
        android:layout_below="@id/product_title"
        android:layout_marginTop="@dimen/small_margin"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Description!!!!" />

    <TextView
        android:id="@+id/product_inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/product_title"
        android:layout_below="@id/product_description"
        android:ellipsize="end"
        tools:text="Inventory" />

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/product_card_image_size"
        android:layout_height="@dimen/product_card_image_size"
        android:maxHeight="@dimen/product_card_image_size"
        android:maxWidth="@dimen/product_card_image_size"
        android:src="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</RelativeLayout>